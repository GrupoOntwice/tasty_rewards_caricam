        <a class="gameday-btn gameday-coupon-btn  opensans-bold" href="{{'/en-us/coupons' |t}}" tabindex="-1">{{ 'Get My
        Coupon' |t }}*</a>
        <p class="coupon-disclaimer opensans-regular">{{ '*Coupons available while quantities last.'|t }}</p>
      </div>
    </div>
  </div>
</section>

