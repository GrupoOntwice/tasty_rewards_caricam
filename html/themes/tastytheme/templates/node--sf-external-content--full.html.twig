{% set contest_style = '' %}
{# {% set  contest_style = 'display:none;' %}
 #}
{% if langcode == 'en' %}
	{% set contest_style = 'display:none;' %}
{% endif %}

{% set contest_style = 'display:none;' %}


{% if email_block_type == 'countdown' %}
	{# <img class="countdown-time-img" src="{{countdown_url}}" /> #}
	<img src="{{countdown_url}}" alt="motionmailapp.com" />
{% elseif email_block_type == 'coupon' %}
	{# URL: https://www.tastyrewards.com/en-us/coupon_email_block #}
	<div class="email-countdown">
		<a href="{{coupon_url}}" style="text-decoration:none; color:#0e4caa;">
			<img src="{{ image_url }}" style="width: 600px;" alt="{{ image_alt}}"/>
			{# <div class="email-countdown-title">{{title | raw}}</div> #}
		</a>
	</div>
{% elseif email_block_type == 'coupon-title' %}
	<div class="email-coupon-title">{{title | raw}}</div>

{% elseif email_block_type == 'contest' %}
	{# URL: https://www.tastyrewards.com/en-us/contest_email_block #}

	<div class="email-countdown">
		{# <img src="{{countdown_url}}"/> #}
		<a href="{{contest_url}}" style="text-decoration:none; color:#0e4caa;">
			<img src="{{ image_url }}"  alt="{{ image_alt}}"/>
		<div style="font-family: sans-serif; margin-top: 30px; color: #0e4caa; font-weight: bold; margin-bottom: 10px; font-size: 30px; text-align: center;">{{title | raw}}</div>
		</a>
	</div>
	<table width="100%" border="0" cellspacing="0" cellpadding="0" style="{{ contest_style }}">
		<tr><td align="center">
			<table border="0" cellspacing="0" cellpadding="0">
				<tr><td class="innertd buttonblock" bgcolor="#DB1D2C" style=" border-radius: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; background-color: #DB1D2C; margin:  20px 0 30px 0; display: block;">
					<a target="_blank" class="buttonstyles" style=" font-size: 22px; font-family: Arial, Helvetica, sans-serif; color: #FFFFFF; text-align: center; text-decoration: none; display: block; font-weight: bold; border-image: initial; background-color: #DB1D2C; padding: 15px 60px; border-radius: 5px; border-top: 0px; border-right: 0px; border-bottom: 5px solid #B81321; border-left: 0px; -moz-border-radius: 5px; -webkit-border-radius: 5px;" href="{{contest_url}}" title="" alias="" conversion="false" data-linkto="http://">
					{% if langcode == 'en-us' %}
						Claim 5 Bonus Entries
					{% else %}
						{% if langcode == 'es-us' %}
							Reclame 5 entradas de bonificaci√≥n
						{% else %}
							{{'Enter Now' | trans }}
						{% endif %}							
					{% endif %}

					</a>
				</td></tr>
			</table>
		</td></tr>
	</table>

{% elseif email_block_type == 'contest-rules' %}
	{# URL: https://www.tastyrewards.com/en-us/legal_email_block #}
	<style>
	   .legal_footer {
				text-align: center; padding: 15px; color:#FFFFFF; font-size:12px 
	     }
		 .legal_footer a {
				margin: 0; color: #FFFFFF; font-family: Helvetica, Arial, sans-serif; font-weight: normal; line-height: 1.3; margin: 0; padding: 0; text-align: left; text-decoration: none
		 }
	</style>
	<div class="display:none" class="{{contest_url}}"></div>
	<div class="legal_footer" >{{legal_footer | raw}}</div>
{% endif %}
