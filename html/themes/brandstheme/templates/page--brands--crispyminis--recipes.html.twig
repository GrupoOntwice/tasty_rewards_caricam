    <section id="recipes" class="crispyminis-related-block crispyminis-nocarousel-block">
      <div class="crispyminis-section-container">
{#          <h2 class="crispyminis-related-recipe-title"> {{'Related Recipes'|t}} </h2>#}
        <div class="crispyminis-nocarousel-container" data-count="{{recipe_count}}">
          {% for recipe in recipes %}
            <div class="crispyminis-nocarousel-box" data-nid="{{recipe.nid}}">
                <div class="img">
                    <a href="{{recipe.link}}"><img src="{{recipe.image_url}}" alt="{{recipe.title|raw}}"/></a>
                </div>

                <div class="crispyminis-stars crispyminis-stars-corner">
                    {% for i in 1..5 %}
                        <span {% if i <= recipe.rating %}class="checked"{% endif %}></span>
                    {% endfor %}

                    {# {% for i in 1..5 %}
                      <input type="radio" id="star-{{i}}-{{recipe.nid}}" name="rate" value="{{i}}" {% if i == recipe.rating %}checked="checked"{% endif %}>
                      <label for="star-{{i}}-{{recipe.nid}}" title="text">{{i}}</label>
                    {% endfor %} #}
                </div>

                <h3>
                    <a href="{{recipe.link}}">{{recipe.title|raw}}</a>
                </h3>

                {{recipe.description}}

                <div class="crispyminis-btn">
                    <a href="{{recipe.link}}" class="crispyminis-btn crispyminis-btn-yellow">
                        {{'View Recipe'|t}}
                    </a>
                </div>
            </div>
          {% endfor %}
