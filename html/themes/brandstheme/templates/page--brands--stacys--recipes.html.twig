<section class="stacys-featured-recipe-section">

  <div class="container stacys-recipe-main-block">

    {% for recipe in top_featured_recipes %}
      <div class="row stacys-recipe-block-row">

        <div class="col-md-5 stacys-featured-recipe-side-description-col">

          <div class="stacys-featured-recipe-description">

            <a href="{{ recipe.link }}">
              <h2>
                {{ recipe.title|raw }}
              </h2>
            </a>

            <p>{{ recipe.body|raw }}</p>

            <div class="featured-recipe-btn">
              <a class="btn_stacys-dark" href="{{ recipe.link }}">
                {{ 'View Recipe'|t }}
              </a>
            </div>

            <div class="stacys-stars-corner">
              <div class="stacys-stars">
                {% for i in 1..5 %}
                  <span {% if i <= recipe.rating %}class="checked"{% endif %}></span>
                {% endfor %}
              </div>
            </div>

          </div>

        </div>

        <div class="col-md-7 stacys-featured-recipe-side-img-col">
          <a href="{{ recipe.link }}" aria-label="{{ recipe.title|raw }}">
            <div class="stacys-featured-recipe-img {% if recipe.img_position is empty %} img-align-center {% else %} img-align-{{ recipe.img_position }} {% endif %}" style="background: url('{{ recipe.image_url }}')"></div>
          </a>
        </div>

      </div>
    {% endfor %}

  </div>


</section>

<section id="recipes" class="stacys-recipes-main-block">

  <div class="container">
    <div class="row">
      <div class="row js-recipe-container-backup hidden">
      </div>

      <div class="col-md-12">
        <div class="row js-recipe-container" data-count="{{ recipe_count }}">

          {% for recipe in recipes %}
            <div class="col-md-4 stacys-recipes-col text-center">

              <div class="row">
                <div class="col-md-12 stacys-recipes-img-block">
                  <a href="{{ recipe.link }}" aria-label="{{ recipe.title|raw }}">
                    <div class="stacys-recipes-img {% if recipe.img_position is empty %} img-align-center {% else %} img-align-{{ recipe.img_position }} {% endif %}" style="background-image: url('{{ recipe.image_url }}')">
                    </div>
                  </a>
                </div>
              </div>
              
              <div class="stars-flex-end">
                <div class="stacys-stars stacys-stars-corner">
                  {% for i in 1..5 %}
                    <span {% if i <= recipe.rating %}class="checked"{% endif %}></span>
                  {% endfor %}
                </div>
              </div>

              <div class='stacys-recipes-description text-center'>

                <a href="{{ recipe.link }}">
                  <h4>
                    {{ recipe.title|raw }}
                  </h4>
                </a>

              </div>

              <div class="stacys-recipes-btn">
                <a href="{{ recipe.link }}" class="btn_stacys">
                  {{ 'View Recipe'|t }}
                </a>
              </div>

            </div>
          {% endfor %}

        </div>
      </div>

      <div class="col-md-12 padding-top-medium text-center">
        <a href="javascript:void(0);" class="more-recipes btn_stacys">{{ 'View More Recipes'|t }}</a>
      </div>

    </div>

  </div>


</section>


