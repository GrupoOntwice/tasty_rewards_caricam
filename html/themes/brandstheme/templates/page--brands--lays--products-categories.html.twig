<section class="banner lays">
{#	<span class="title">#}

{#	</span>#}
	<div class="lays-product-banner-landing-page bg-{{background_color}}" style="background-image: url('{{banner_img}}');">
{#		<img src="{{banner_img}}">#}
        <h1>{{product_category_title|t}}</h1>
	</div>
	<div class="lays-product-banner-landing-page-mobile" style="background-image: url('{{banner_mobile_img}}');">
{#		<img src="{{banner_mobile_img}}">#}
        <h1>{{product_category_title|t}}</h1>
	</div>

</section>
{# For Daud you can use the {{background_color}} as unique class for the product categories #}
<section class="lays-background-landing-page bg-{{background_color}}" style="background-image: url('{{background_img}}');">
{#	<img src="{{background_product_category}}" class="product-banner">#}
{#    <div class="product-banner" style="background-image: url('{{background_product_category}}');"></div>#}

    <div class="container">
        {# {{ drupal_view('products', 'product_categories_' ~ product_category) }} #}
            <ul class="products thumbnails">
                {% for product in products %}
                    <li class="products-item">
                        {% if product.background_color|length %}
                       <div class="product-image-background-wrapper" style="background-color:{{product.background_color}};">
                       {% else %}
                            <div class="product-image-background-wrapper">
                       {% endif %}
                          <div class="product-image-title">
                             <a href="{{product.link}}" class="products-category-image">
                                <img src="{{product.image_url}}" width="500" height="659" alt="{{product.title}}" title="{{product.title}}" typeof="foaf:Image" class="img-responsive">
                             </a>
                             <h3 class="products-title bg-{{background_color}}">
                                {{product.title|raw}}
                             </h3>
                          </div>
                          <div class="view-product-link">
                             <a href="{{product.link}}"> {{'View Product'|t}}</a>
                          </div>
                       </div>
                    </li>
                {% endfor %}
            </ul>
    </div>
</section>

<section id="coupon-block" class="coupon-block">
    <div class="lays-coupon--container-bg-desktop">
        {{ coupon_block|t|raw }}
    </div>
</section>


