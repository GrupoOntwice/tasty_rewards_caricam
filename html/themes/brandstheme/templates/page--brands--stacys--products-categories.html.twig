<div class="navbar-wrapper-tasty">
  {{ attach_library('brandstheme/stacys') }}

  {% include '@brandstheme/includes/header.html.twig' %}
  {% include '@brandstheme/includes/header-' ~ brand ~ '.html.twig' %}
</div>

<section class="stacys-top-banner bg-white">

  <img class="w-100 noMobile-md" src="/themes/brandstheme/src/images/stacys/stacys-products-banner-dsk.png" alt="Stacys Products Banner">
  <img class="w-100 noDesktop-md" src="/themes/brandstheme/src/images/stacys/stacys-products-banner-mbl.png" alt="Stacys Products Banner">

  <div class="container stacys-banner-copy">
    <div class="row">
      <div class="col-md-12 col-lg-5 center-align-dsk-stacys">
        <div class="noMobile-md">
          <img class="w-banner-pattern" src="/themes/brandstheme/src/images/stacys/stacy-top-banner-heading-pattern.svg" alt="Stacys banner heading pattern">
        </div>
        <div>
          <h1 class="text-dark">
            <img class="w-banner-pattern-mbl" src="/themes/brandstheme/src/images/stacys/stacy-top-banner-heading-pattern.svg" alt="Stacys banner heading pattern">
            {{ 'Pita Chips'|t }}
          </h1>
{#          <p class="text-dark">#}
{#            {{ 'Stacy’s<sup>®</sup> pita chips are crafted without compromise, using only quality ingredients. Check out our delicious flavour varieties below.'|t }}#}
{#          </p>#}
        </div>
      </div>
    </div>
  </div>

</section>

<section id="product-categories" class="stacys-products-block">

  <div class="products-bg-bottom-left">
    <img class="w-40-mbl w-75" src="/themes/brandstheme/src/images/stacys/stacys-products-bg-left.png" alt="Products background">
  </div>

  <div class="container">

    <div class="row center-align-md-dsk">

      {% for idx, product in products %}
        <div class="stacys-prod-col text-center col-12 col-md-6 col-lg-3">

          <a href="{{ product.link }}" hreflang="en" target="_self">
            <img class="w-75-mbl w-100" src="{{ product.image_url }}" border="0" alt="{{ product.title|raw }}"/>
          </a>

          <div class="stacys-product-description">
            <h4>
              {{ product.title|raw }}
            </h4>

            <div class="product-btn-div">
              <a class="btn_stacys" href="{{ product.link }}">{{ 'View Product'|t }}</a>
            </div>

          </div>

        </div>
      {% endfor %}

    </div>
  </div>

  <div class="products-bg-bottom-right">
    <img class="w-50-mbl w-75" src="/themes/brandstheme/src/images/stacys/stacys-products-bg-right.png" alt="Products background">
  </div>

  <div class="products-bg-top-right noDesktop-md">
    <img class="w-75" src="/themes/brandstheme/src/images/stacys/stacys-products-bg-top-right.png" alt="Products background">
  </div>

</section>

<section id="our-recipes">
  <div class="stacys-featured-recipes-block-products">
    {% include '@brandstheme/includes/featured/featured-recipes-stacys.html.twig' %}
  </div>
</section>


<section id="coupon" class="stacys-coupon-block">
  <div class="stacys-section-container two-panel-block">
    {{ coupon_block|t|raw }}
  </div>
</section>



