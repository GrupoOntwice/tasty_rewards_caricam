    <div class="products-items col-md-12">
        {% for product in products %}
          <div class="products-item w-100 d-lg-flex animate__animated  ">

            {% if loop.index % 2 == 1 %}
              {% set class_align = 'product-align-left' %}
              <div class="col-lg-6 product-img-col bare-align-left animate__animated  animate__fadeInLeft">
                <div class="products-recipe-image">
                    <img src="{{product.image_url}}" width="408" height="538" alt="{{product.title}}" typeof="foaf:Image" class="img-responsive">
                </div>
                <div class="products-extra-image">
                  {% if product.extraimage1_url %}
                    <img src="{{product.extraimage1_url}}" width="408" height="538" alt="{{product.title}}" typeof="foaf:Image" class="img-responsive">
                  {% endif %}
                </div>
                <div class="products-extra-image2">
                  {% if product.extraimage2_url %}
                    <img src="{{product.extraimage2_url}}" width="408" height="538" alt="{{product.title}}" typeof="foaf:Image" class="img-responsive">
                  {% endif %}
