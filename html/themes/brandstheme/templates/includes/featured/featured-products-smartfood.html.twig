<div id="homepage-featured-products-carousel" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators featured-carousel-indicators">
        {% for idx, product in featured_products %}
            <li data-target="#homepage-featured-products-carousel" data-slide-to="{{ idx }}" class="{{ idx==0 ? 'active' :'' }}"></li>
        {% endfor %}
    </ol>

    <!-- The slideshow -->
    <div class="carousel-inner container">
        {% for idx, product in featured_products %}
            <div class="carousel-item row {{ idx==0 ? 'active' :'' }}">
                <div class='col-md-12 featured-prod-col-bg'>
                    <div class="row center-align-md-dsk featured-prod-bag-bg">
                        <div class="col-md-12 featured-carousel-inner-border">
                            <div class="row">
                                <div class='col-md-5 featured-product-image-col'>
                                    <div class="featured-product-image-div">
                                        <img loading="lazy" class='featured-product-image' src='{{product.extra_image_url}}' alt="Featured Product">
                                    </div>
                                </div>
                                <div class='col-md-7 featured-prod-copy'>

                                    <div class="featured-prod-copy-div">
                                        <h3 class='featured-product-title'> {{ product.title|raw }}</h3>
                                        {% set trimmed_body = truncateText(product.body|raw, 20) %}
                                        <span class="smartfood-product-description"> {{product.body|striptags('<sup>')|raw}}</span>
                                        <br>

                                        <a class="smartfood-button" href="{{ product.link }}" title ="{{ product.title | raw}}">
                                            {{'VIEW PRODUCT'|t}}
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>

    <!-- Left and right controls -->

        <a class="carousel-control-prev smartfood-d-md-flex" href="#homepage-featured-products-carousel" data-slide="prev" aria-label="toggle arrow">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next smartfood-d-md-flex" href="#homepage-featured-products-carousel" data-slide="next" aria-label="toggle arrow">
            <span class="carousel-control-next-icon"></span>
        </a>

</div>