<div class="container">
  <div class="row">
    <div class="col-md-12 featured-recipe-heading text-center">
      <h2>{{ 'Recipes'|t }}</h2>
      <hr class="capncrunch-hr">
    </div>

    {% if recipes %}
      <div class="col-md-12 ">
        <div class="row">

          {% for idx, recipe in recipes %}
            <div class="col-md-4 capncrunch-featured-recipe-img-col">
              <div class="row">
                <div class="col-md-12 capncrunch-featured-recipe-img-block">
                  <a href="{{ recipe.link }}">
                    <div class="capncrunch-featured-recipe-img" aria-label="Cap'N Crunch Featured Recipe">
                      <img loading="lazy"  class='featured-recipe-image' src='{{recipe.image_url}}' alt='{{ recipe.title|raw }}'>
                    </div>
                  </a>
                </div>
              </div>

{#              <div class="capncrunch-stars capncrunch-stars-corner">#}
{#                {% for i in 1..5 %}#}
{#                  <span {% if i <= recipe.rating %}class="checked"{% endif %}></span>#}
{#                {% endfor %}#}
{#              </div>#}

              <div class="capncrunchs-featured-recipes-description">
                <h4>
                  {{ recipe.title|raw }}
                </h4>

{#                <p class="capncrunch-product-description"> {{ recipe.body|raw }}</p>#}

              </div>

            </div>
          {% endfor %}
        </div>
      </div>

    {% endif %}

  </div>
</div>
