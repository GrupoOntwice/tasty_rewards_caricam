  <section id="missvickies-signatures-block" class="">

    <div class = "top-right">
      <img src = "/themes/brandstheme/src/images/missvickies/findyourflavour/top-right.png"/>
    </div>

    <div class = "top-left">
      <img src = "/themes/brandstheme/src/images/missvickies/findyourflavour/top-left.png"/>
    </div>

    <div class="container">

      <div class="row">

        <div class="col-12 col-md-8 text-center m-auto">
          <h2 class="signatures-gold-heading">{{ 'Flavour Finder'|t }}</h2>

          <p class="text-white missvickies-signatures-intro">
            {{ "Find your way into a flavour that best suits you, then <br>
                we'll match you up with your Miss Vickie's<sup>®</sup> flavour! "|t }}
          </p>
        </div>

          <div class="slidecontainer col-md-6">
            <p>{{"Sweet or Salty?"|t}}</p>
            <input name="sweet_salty" id="sweet_salty" class="js-flavour-slider" type="range" min="1" max="2" value="1">

            <p>{{"Tangy or Spicy?"|t}}</p>
            <input name="tangy_spicy" id="tangy_spicy" class="js-flavour-slider" type="range" min="1" max="2" value="1">
          </div>
          {% set product = default_product %}
          <div class="missvickies-product-box js-flavourfinder col-md-6">
              <div class="missvickies-product-img">
                  <a href="javascript:void(0);" hreflang="en" class="js-flavour-link">

                      <img src="/themes/brandstheme/src/images/missvickies/findyourflavour/silhouette.png" class="missvickies-{{product.background_color}} js-flavour-img"
                           border="0" alt="{{product.image_alt|raw}}"/>
                  </a>
              </div>

{#              <h3 class="products-title white js-flavour-title" style="color: #F5F1E7;">#}
{#                  {{product.title|raw}}#}
{#              </h3>#}
{#              <a href="{{product.link}}"class="missvickies-red-button js-flavour-link" href="{{product.link}}">#}
{#                  {{'VIEW PRODUCT'|t}}#}
{#              </a>#}

{#            <div class="padding-top">#}
{#                 <button class="btn_missvickies js-buynow"  data-toggle="modal" data-target="#missvickiesModal"> {{'Buy now'|t}} </button>#}
{#             </div>#}



        </div>

      </div>
    </div>

    {% set show_product_buynow = 1 %}

      <div class="featured-products">
        <div class="">
            {# {{ drupal_view('product_categories', 'block_cheetos_product_categories') }} #}

            <div class="container row m-auto">
              <div class = "col-md-12">
                <h2 class="missvickies-title text-center signatures-gold-heading">{{"Featured products"|t}}</h2>
              </div>
                <div class="missvickies-product-category slick">
                    {% for idx, product in featured_products %}
                        <div class="missvickies-product-box">
                            <div class="missvickies-featured-product-img">
                                <a href="{{product.link}}" hreflang="en">

                                    <img src="{{product.image_url}}" class="missvickies-{{product.background_color}}"
                                         border="0" alt="{{product.image_alt|raw}}"/>
                                </a>
                            </div>

                            <h3 class="products-title white" style="color: #F5F1E7;">
                                {{product.title|raw}}
                            </h3>
                            <a href="{{product.link}}"class="missvickies-red-button" href="/en-ca/brands/missvickies/products-categories/missvickies">
                                {{'VIEW PRODUCT'|t}}
                            </a>

                          <div class="padding-top">
                              {% if show_product_buynow %}
                               <button class="buynow-btn js-buynow" id = "missvickies-buy" data-toggle="modal" data-target="#missvickiesModal"> {{'Buy now'|t}} </button>
                              {% endif %}
                           </div>
                        </div>
                    {% endfor %}
                </div>

              <div class = "view-all-btn">
                <a class = "missvickies-red-button" href = "/{{language}}-ca/brands/missvickies/products-categories/miss-vickies">{{ 'View All Products' |t }}</a>
              </div>

            </div>
                <div class = "bottom-right">
                  <img src = "/themes/brandstheme/src/images/missvickies/findyourflavour/bottom-right.png"/>
                </div>
        </div>

        <div class="modal bootstrap-modal bg-transparent missvickies-buynow-modal" id="missvickiesModal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <button type="button" class="close buynow-close" id = "closeModal" data-dismiss="modal">×</button>
                    {# <p>Content goes here</p> #}
                    {% if iframe_url %}
                      <iframe id="snack-shop" src="{{iframe_url}}"></iframe>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>


    </div>

