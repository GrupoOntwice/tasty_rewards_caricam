<div id="vr-products" class="container">
  <div class="products-title animate__animated ">

    {%if ( language == 'en') %}
      <h3>FRITO LAY<sup class="product-sup">&reg;</sup> VARIETY PACKS</h3>
    {% endif %}

    {%if ( language == 'fr') %}
      <h3>Les emballages de produits <br>assortis FRITO-LAY<sup class="product-sup">&reg;</sup></h3>
    {% endif %}

  </div>

  <div class="products-items">
    {# product-alight-left  #}
    {% for row in rows %}
      {% set class_align = 'product-align-left' %}

      {% if loop.index % 2 == 0 %}
        {% set class_align = 'product-align-right' %}
      {% endif %}

      <div class="products-item animate__animated {{class_align}} ">
        {{ row.content }}
      </div>
    {% endfor %}

  </div>
</div>


