{{ attach_library( 'quaker_contest/cheetos' ) }}

<section class="cheetos noprovince" id="cheetos-entry">        
    <div class="cheetos-banner">
        <div class="cheetos-banner-content">
            <div class="cheetos-banner-text">
                <h1>
                    {{ 'Enter for a chance to win<sup>&dagger;</sup> $10,000' | t | raw }}
                </h1>

                <h3 class="cheetos-banner-subtitle">
                    {{ 'Plus 1000’s of instant prizes' | t }}
                </h3>

                <div class="cheetos-roc cheetos-hide-mobile">
                    <p>
                        {{ 'Want to play but don’t have a UPC? No worries, you can still show me your skills without entering the contest!' | t }}
                    </p>

                    <a href="{{data.game_url}}" class="cheetos-btn cheetos-btn-orange">
                        {{ 'Play game for fun' | t }}
                    </a>
                </div>
            </div>

            <div class="cheetos-banner-chester">
                <img src="/themes/tastytheme/src/images/contest-cheetos/cheetos-entry-chester.png" />
            </div>

            
            <div class="cheetos-entry-form">
                <div class="cheetos-banner-chester-mobile">
                    <img src="/themes/tastytheme/src/images/contest-cheetos/cheetos-entry-chester.png" />
                </div>
                
                <div class="cheetos-entry-form-mobile-background">
                    <form data-toggle="validator" enctype="multipart/form-data" role="form" id='contestsignup-form' method="POST" autocomplete="off">
                        <p>
                            *{{ 'Required fields' | t }}
                        </p>


                            <div class=" input-1col">
                                <span class="help-block err_upccode">{{data.error.upccode?:''}}</span>
                                <input type="text" class="contest-detail__input {{data.error.upccode?'has-error':''}}" name='upccode' id="contest-upccode" disabled="disabled"  placeholder="*{{ 'UPC'|t }}" value="{{data.upccode?:''}}"  {{data.upccode?form_field_status:''}}>
                            </div>

                        <div class="input-1col">
                            <span class="help-block err_email">{{data.error.email| raw?:''  }}</span>
                            <input type="email" disabled="disabled" id="contest-email" class="contest-detail__input {{data.error.email?'has-error':''}}" name="email" placeholder="*{{ 'Email'| t }}" value="{{data.email?:''}}" {{data.email?form_field_status:''}}>
                        </div>

                        <div class="input-2col">

                            <div class="contest-detail__quacker-input-col">
                                <span class="help-block err_firstname">{{data.error.firstname?:''}}</span>
                                <input type="text" disabled="disabled" class="contest-detail__input {{data.error.firstname?'has-error':''}}" name='firstname' id="contest-firstname"  placeholder="*{{ 'First Name'|t }}" value="{{data.firstname?:''}}"  {{data.firstname?form_field_status:''}}>
                            </div>

                            <div class="contest-detail__quacker-input-col">

                                <span class="help-block err_lastname">{{data.error.lastname?:''}}</span>
                                <input type="text" disabled="disabled" id="contest-lastname" class="contest-detail__input {{data.error.lastname?'has-error':''}}" name="lastname" placeholder="*{{ 'Last Name'|t }}" value="{{data.lastname?:''}}"  {{data.lastname?form_field_status:''}}>
                            </div>
                        </div>

                        <div class="input-1col">
                            <span class="help-block err_province">{{data.error.province?:''}}</span>
                            <div class="select-custom-arrow-container">
                                <select class="province form-control modal__sign-up-select" name="province" id="province" style = "width: 100%; color: black; border:1px solid #adadad" >
                                    {{ data.provinces_options| raw }}
                                </select>
                            </div>
                        </div>

                        <div class="input-1col">
                            <span class="help-block err_email">{{data.error.postalcode| raw?:''  }}</span>
                            <input type="text" disabled="disabled" id="postalcode" class="contest-detail__input {{data.error.postalcode?'has-error':''}}" name="postalcode" placeholder="*{{ 'Postal Code'|t }}" value="{{data.postalcode?:''}}" {{data.postalcode?form_field_status:''}}>
                        </div>

                        <label class="checkbox-container">
                            {{ 'Yes! Sign me up to Tasty Rewards&trade; by email so I never miss out on exciting updates, offers or contests (and I have the option to unsubscribe at any time).' | t }}
                            <input type="checkbox" name="cheetos_newsletter" id="cheetos_newsletter"  />
                            <span class="checkmark"></span>
                        </label>

                        <label class="checkbox-container">
                            {{ 'By submitting my entry, I confirm that I am 19 years of age or older, and I have read, understood and agree to participate according to the'|t|raw}} <a href="{{data.rules_link}}">{{'Official Rules' | t | raw }}</a>.
                            {# <input type="checkbox" name="cheetos_ageConfirm" id="cheetos_ageConfirm"  /> #}
                            <input type="checkbox" class="contest-detail__checkboxes-color" id="optin_maj" name='optin_maj'  {{ data.optin_maj==1?'checked' }}  />
                            <span class="help-block err_optin_maj">{{data.error.optin_maj| raw?:''  }}</span>
                            {# <p class="contest-detail__checkbox-text optin">{{'By participating in the contest, I confirm that I am eligible to and will participate according to the <a href="/contest/%s/officialrules" target="_blank">Official Rules</a>.' |format(data.contesturi)| t  }}</p> #}
                            <span class="checkmark"></span>
                        </label>
                        
                        <input type="button" value="{{'Play now!'|t}}"  class="cheetos-btn cheetos-btn-red cheetos-roc js-submit-contest" />
                        <input type="button" value="{{'Submit'|t}}" class="cheetos-btn cheetos-btn-red cheetos-qc js-submit-contest" />

                        <input type="submit" value="{{'Play now!'|t}}" name="cheetos-roc-submit" class="cheetos-btn cheetos-btn-red cheetos-roc js-submit-contest-button hidden" />
                        <input type="submit" value="{{'Submit'|t}}" name="cheetos-qc-submit" class="cheetos-btn cheetos-btn-red cheetos-qc js-submit-contest-button hidden" />
                        
                        <div class="cheetos-roc cheetos-hide-desktop cheetos-form-playforfun">
                            <p>
                                {{ 'Want to play but don’t have a UPC? No worries, you can still show me your skills without entering the contest!' | t }}
                            </p>

                            <a href="{{data.game_url }}" class="cheetos-btn cheetos-btn-red">
                                {{ 'Play game for fun' | t }}
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <img class="cheetos-bottom-border" src="/themes/tastytheme/src/images/contest-cheetos/cheetos-bottom-border.png" />
    </div>

    <div class="cheetos-entry-body">
        <div class="cheetos-entry-row cheetos-entry-row-first container">
            <div class="cheetos-entry-row-text">
                <h2>
                    {{ 'Step right up & enter for your chance to win<sup>&dagger;</sup> $10,000' | t | raw }}
                </h2>

                <p class="cheetos-roc">
                    {{ "How's that for high-stakes? Try to beat me at my own game. Plus, you have a chance to walk away with a cool instant prize and an entry for a chance to WIN<sup>&dagger;</sup> $10K!" | t | raw }}
                </p>
                <p class="cheetos-qc">
                    {{"Plus, you could walk away with a cool instant prize!" |t}}
                </p>

                <a class="cheetos-btn cheetos-btn-red cheetos-roc js-cheetos-play" href="javascript:void(0);">
                    {{ "Let's play"  | t }}
                </a>
            </div>

            <div class="cheetos-entry-row-image">
                <img src="/themes/tastytheme/src/images/contest-cheetos/cheetos-entry-1.png" />
            </div>
        </div>

        <div class="cheetos-entry-row container">
            <div class="cheetos-entry-row-image">
                <img src="/themes/tastytheme/src/images/contest-cheetos/cheetos-entry-2.png" />
            </div>

            <div class="cheetos-entry-row-text">
                <h2>
                    {{ 'Want a chance to win<sup>&dagger;</sup> some free cheetos<sup>&reg;</sup> products?' | t | raw }}
                </h2>

                <p>
                    {{ "That's not a rhetorical question. I'm literally giving away THOUSANDS of free bags* of Cheetos<sup>&reg;</sup> cheese flavoured snacks and THOUSANDS of free boxes* of Cheetos<sup>&reg;</sup> Mac 'n Cheese pasta with sauce (yes - you heard me. Cheetos<sup>&reg</sup>. Mac. 'n Cheese.)." | t | raw }}
                </p>

                <p class="cheetos-entry-row-text-disclaimer">
                    * {{ 'Awarded in the form of free product coupons.' | t }}
                </p>

                <a class="cheetos-btn cheetos-btn-red cheetos-roc js-cheetos-play" href="javascript:void(0);">
                    {{ 'Play now' | t }}
                </a>
                <a class="cheetos-btn cheetos-btn-red cheetos-qc" href="#">
                    {{ 'Enter now' | t }}
                </a>
            </div>
        </div>

        <div class="cheetos-entry-findupc container">
            <div class="cheetos-entry-row">
                <div class="cheetos-entry-row-image">
                    <img class="cheetos-hide-mobile" src="/themes/tastytheme/src/images/contest-cheetos/upc-location.png" />
                    <img class="cheetos-hide-desktop" src="/themes/tastytheme/src/images/contest-cheetos/upc-location-mobile.png" />
                </div>

                <div class="cheetos-entry-row-text">
                    <h2>
                        {{ 'Where to find your UPC' | t }}
                    </h2>

                    <p>
                        {{ 'Find the UPC on the back of specially marked bags of Cheetos<sup>&reg;</sup> snacks!' | t | raw }}
                    </p>

                    <a class="cheetos-btn cheetos-btn-red" href="{{data.faq_link}}">
                        {{ 'Have any questions?' | t }}
                    </a>
                </div>
            </div>
        </div>
        
        <img class="cheetos-bottom-border" src="/themes/tastytheme/src/images/contest-cheetos/cheetos-bottom-border.png" />
    </div>

        <div class="cheetos-disclaimer">
            <p>
                {{ '<sup>&dagger;</sup>No purchase necessary. Open to Canadian residents, 19+. Mathematical skill-testing question required. Contest period: June 28 @ 12:00 pm (noon) ET to September 5, 2021 @ 11:59:59 pm ET. Enter UPC for a chance to win (i) Instant Prizes: Cheetos® Free Product Coupon and Cheetos® Mac ’n Cheese Free Product Coupon (4,100 available/ARV $7.98 ea); (ii) Grand Prize: $10,000 cash (awarded in the form of a cheque). Chances of winning: (i) Instant Prize, depend on when entry played; (ii) Grand Prize, depend on entries received. Max 1 UPC per day. Prizes diminish as awarded. Details & Official Rules, <a href="/en-ca/contest/cheetoscarnival/officialrules" target="_blank">click here</a>' | t | raw }}
            </p>

            <div class="cheetos-disclaimer-controls">
                <a href="{{data.rules_link}}" class="cheetos-btn cheetos-btn-orange" target="_blank">
                    {{ 'Official rules' | t }}
                </a>

                <a href="{{data.faq_link}}" class="cheetos-btn cheetos-btn-orange" target="_blank">
                    {{ 'FAQ' | t }}
                </a>
            </div>
        </div>
</section>
