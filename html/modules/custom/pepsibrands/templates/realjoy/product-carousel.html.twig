<div id="lays-feature-product-carousel" class="custom-slick-arrow container">
    {% for idx, product in data.featured_products %}
        {% set textbox_background_color = "#FFFFFF" %}
        {% if product.textbox_background_color != '' %}
            {% set textbox_background_color = product.textbox_background_color %}
        {% endif %}
        <div class="products-carousel-slide">
            <div class="lays-featured-prod-img-col lays-featured-prod-img-col-{{ idx }}">
                <img class='' src='{{product.extra_image_url}}' alt="{{ product.title|raw }}">
                <div class='featured-prod-copy' style="background-color: {{ textbox_background_color }}">
                    <h3 class='featured-product-title'> {{ product.title|raw }}</h3>
                    {% set trimmed_body = truncateText(product.body|raw, 20) %}

                    <a class="btn_lays" href="{{ product.link }}" title ="{{ product.title | raw}}">
                        {{'View Product'|t}}
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>



