<section id="contentBlocks" class="container-fluid">
    <div class="row">
        <div id="" class="container">
            <form data-toggle="validator" role="form" id='delete-form'>

                <div class="col-sm-12 pink">

                    <h2 class="pink signika">{{ 'Weâ€™re sad to see you go. Please confirm that you wish to delete your account. You will also be unsubscribed from our email list.'|t }}</h2>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <label><input type = "checkbox" name='optin' id ='optin' value="1" >
                                <span class="casl">
                                    {{ 'Yes, I would like to delete my account.'|t }}
                                </span>
                            </label>
                            <span class="help-block err_optin"></span>
                        </div>	
                    </div>
                    <div class="row">
                        <div class="col-sm-12 form-group">
                            <div id='form'>
                            <span class="help-block err_form"></span>
                            </div>
                        </div>	
                    </div> 
                    <input type="hidden" name='casl' id='casl'>
                    <input type="hidden" name='user_id' id='user_id' value="{{data.uid}}">
                    <input type="hidden" name='csrfToken' id='csrfToken' value="{{data.csrfToken?:''}}">
                    <div class="row">
                        <div class="col-sm-12 text-center form-group">
                             <hr class="bg-grey" />
                            <button type="button" class="btn btn-primary text-center btndeleteprofile">{{ 'Submit'|t }} <span class="glyphicon glyphicon-spin"></span></button>
                            <br><br>
                        </div> 
                    </div> 

                </div>
            </form> 
        </div> 
    </div>
</section>
                            
