{#{ kint(data) }#}
{#{ form}#}
<script type="text/javascript"><!--
    language = '{{ data.language }}';
    //-->
</script>
{{ attach_library( 'pepsibam/pepsiresetpwdrequestlibrary' ) }}

<section id="contest">
    <div class="contest__detail-wrapper">

        <h2 class="pink signika">
            {% if data.is_resetpwd %}
                {{ 'Oops, what’s my password again?'|t }}
            {% else %}
                {# {{ 'Already a SnackPerks member?'|t }} #}
                {{ 'Create your password to enjoy all PepsiCo Tasty Rewards has to offer!'|t }}
            {% endif %}
        </h2>
        <p>
            {% if data.is_resetpwd %}
                {{"Enter your email address below and we’ll send you an email with a link to reset your password."|t}}
                {% set create_pwd = 0 %}
            {% else %}
                {% set create_pwd = 1 %}
                {{"By creating your password you’ll have access coupons, sweepstakes and more."|t}}
            {% endif %}
        </p>
        <div class="contest-detail__form">

            <form data-toggle="validator" role="form" id='resetpwdrequest-form'>
                <input type="hidden" name='isCreatePwd' id='isCreatePwd' value="{{create_pwd}}">


                <div class="contest-detail__user-name">
                    <div class="col-sm-12 form-group forgot-password__space">
                        <label for="email" class="hidden">email</label>
                        <input type="email" name='email' id='email' aria-label="email" placeholder="{{'Email Address'|t }}" class="contest-detail__input">
                        <span class="help-block err_email"></span>
                    </div>
                </div>




                <input type="hidden" name='csrfToken' id='csrfToken' value="{{data.csrfToken?:''}}">
                <button type="button" class="btn_red btn btnregister unsubscribe-space">{{ 'Submit'|t }} <span class="glyphicon glyphicon-spin"></span></button>


                <div class="contest-detail__user-name">
                    <div class="col-sm-12 form-group">
                        <div id='form'>
                            <span class="help-block err_form"></span>
                        </div>
                    </div>	
                </div>                        

            </form>
        </div>

    </div>
</section>

<section id="contest">

    <section id="coupons">
        {# {{ drupal_block('secondsectionblock') }} #}
    </section>


    <!--brand carousel -->
    {% include '@tastytheme/includes/brands.html.twig' %}
    <!--brand carousel end -->
</section>             